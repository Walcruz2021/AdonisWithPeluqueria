{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": ["**/*"],
  "exclude": ["node_modules", "build", "tsconfig.json"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "resolveJsonModule": true,
    "types": ["@adonisjs/core", "@adonisjs/lucid"]
  }
}
